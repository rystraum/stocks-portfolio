<p id="notice"><%= notice %></p>

<h1>Price Updates</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Datetime</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @price_updates.each do |price_update| %>
      <tr>
        <td><%= price_update.company %></td>
        <td><%= price_update.datetime %></td>
        <td><%= price_update.price %></td>
        <td><%= link_to 'Show', price_update %></td>
        <td><%= link_to 'Edit', edit_price_update_path(price_update) %></td>
        <td><%= link_to 'Destroy', price_update, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Price Update', new_price_update_path %>
