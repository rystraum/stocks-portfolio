<div class="container-fluid">
    <p id="notice"><%= notice %></p>
    <div class="p-2 d-flex justify-content-between align-items-center">
        <h1 class="display-4">Price Updates</h1>
        <h3 class="add-button"><%= link_to "<span class='text-info fe fe-plus-square'></span><span class='text-info'> Add new price update</span>".html_safe, new_price_update_path %></h3>
    </div>

    <div class="table-responsive">
        <table class="table table-sm table-striped table-hover">
            <thead class="thead-dark">
                <tr class="text-center">
                    <th class="w-50">Datetime</th>
                    <th class="w-25">Company</th>
                    <th class="text-right">Price</th>
                    <th>With Notes?</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% @price_updates.each do |price_update| %>
                    <tr class="text-center">
                        <th class="w-25 p-3"><%= format_date price_update.datetime %></th>
                        <th class="w-25 p-3"><%= link_to price_update.company, price_update.company %></th>
                        <td class="text-right"><%= format_currency price_update.price %></td>
                        <td><span class="<%= price_update.notes.blank? ? "badge badge-info" : "badge badge-warning" %>" style="font-size: 12px;"><%= price_update.notes.blank? ? "No" : "Yes" %></span></td>
                        <td class="text-right" style="width: 6%;">
                            <span class="align-middle" style="font-size: 15px;">
                                <%= link_to "<span class='fe fe-eye'></span>".html_safe, price_update %>
                                <%= link_to "<span class='fe fe-edit'></span>".html_safe, edit_price_update_path(price_update) %>
                                <%= link_to "<span class='fe fe-trash'></span>".html_safe, price_update, method: :delete, data: { confirm: 'Are you sure?' } %>
                            </span>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
