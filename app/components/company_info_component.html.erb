<div class="card">
    <div class="card-header">        
        <h1 class="border-b w-fit"><%= company.name %> (<%= company.ticker %>)</h1>
    </div>
    <div class="card-body">
        <dl class="w-3/4">
            <%= render DLTableComponent.new("Industry", company.industry) %>
            <%= render DLTableComponent.new("Status", company.inactive? ? "Inactive" : "Active") %>
            <%= render DLTableComponent.new("Target Buy Price", company.target_buy_price) %>
            <%= render DLTableComponent.new("Target Notes", company.target_price_note) %>
            <% if company.dividend_frequency_months %>
                <%= render DLTableComponent.new("Dividend Frequency", "Every #{company.dividend_frequency_months} months") %>
            <% end %>
        </dl>
        <h2 class="text-lg mt-2">Links</h2>
        <ul class="ml-4">
            <li><%= link_to "PSE Edge", company.pse_url, target: :_blank %></li>
            <% if with_company_name? %>
                <li><%= link_to "Simply Wall Street", simply_wall_st_url, target: :_blank %></li>
            <% else %>
                <li><%= link_to "Simply Wall Street", simply_wall_st_url, target: :_blank %></li>
            <% end %>
            <li><%= link_to "Pesobility", pesobility_url, target: :_blank %></li>
            <li><%= link_to "Marketwatch", marketwatch_url, target: :_blank %></li>
        </ul>
    </div>
</div>
